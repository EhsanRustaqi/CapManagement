@page "/drivers"
@inject IDriverSericeClient DriverClientService
@inject NotificationService NotificationService
@inject DialogService DialogService
@using CapManagement.Client.IServiceClient
@using CapManagement.Shared.DtoModels.DriverDtoModels
@using CapManagement.Shared.Models
@using Radzen
@using Radzen.Blazor
@using System.Text.Json


<RadzenButton Text="Add Driver" Icon="add_circle" ButtonStyle="ButtonStyle.Primary"
              Click="@(async args => await OpenCreateDialog())" Style="margin-top:20px" />

