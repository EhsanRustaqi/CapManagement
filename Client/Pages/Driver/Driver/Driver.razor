<RadzenDataGrid @ref="driversGrid"
                Data="@drivers"
                Count="@totalCount"
                LoadData="@LoadData"
                TItem="DriverDto"
                AllowPaging="true"
                PagerHorizontalAlign="HorizontalAlign.Center"
                AllowSorting="true"
                AllowMultiColumnSorting="true"
                AllowFiltering="true"
                FilterMode="FilterMode.Advanced" 
                PageSize="10">
    <Columns>
        <RadzenDataGridColumn Width="50px" Title="#" Filterable="false" Sortable="false" TextAlign="TextAlign.Center">
            <Template Context="data">
                @(drivers.IndexOf(data) + ((pageNumber - 1) * pageSize) + 1)
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn Property="DriverName" Title="Name" />
        <RadzenDataGridColumn Property="LastName" Title="LastName" />
        <RadzenDataGridColumn Property="LicenseNumber" Title="License Number" />
        <RadzenDataGridColumn Property="Phonenumber" Title="Phone Number" />
        <RadzenDataGridColumn Property="DateOfBirth" Title="DOB" FormatString="{0:yyyy-MM-dd}" />
        <RadzenDataGridColumn Property="IsActive" Title="Status" />
        <RadzenDataGridColumn Width="160px" Title="Actions" Filterable="false" Sortable="false">
            <Template Context="driver">


                <RadzenButton Text="View" Icon="visibility" ButtonStyle="ButtonStyle.Info" Size="ButtonSize.Small"
                              Click="@(args => DialogService.OpenAsync<ViewDriverDialog>(
          "Driver Details",
          new Dictionary<string, object>() { { "DriverId", driver.DriverId } },
          new DialogOptions() { Width = "600px", Height = "500px" }))" />


  @*               <RadzenButton Icon="edit" Text="Edit" ButtonStyle="ButtonStyle.Info" Size="ButtonSize.Small"
                              Click="@(() => EditDriver(driver.DriverId, driver.DriverName))" /> *@
                <RadzenButton Icon="archive" Text="Archive" ButtonStyle="ButtonStyle.Danger" Size="ButtonSize.Small"
                              Click="@(() => ConfirmArchive(driver.DriverId, driver.DriverName))" />
            </Template>
        </RadzenDataGridColumn>
    </Columns>
</RadzenDataGrid>

@code {
    private RadzenDataGrid<DriverDto>? driversGrid;
    private List<DriverDto> drivers = new();
    private int totalCount;
    private int pageNumber = 1;
    private int pageSize = 5;
    private bool isLoading;
    private bool isDisposed;
    private Guid companyId = Guid.Parse("9D176E43-E0FF-4755-B130-625189F3991B"); // Seeded CompanyId

    protected override async Task OnInitializedAsync()
    {
        if (isDisposed) return;
        await LoadData(new LoadDataArgs { Skip = 0, Top = pageSize });
    }





    private async Task LoadData(LoadDataArgs args)
    {
        if (isDisposed || isLoading) return;
        isLoading = true;
        try
        {
            if (args.Skip.HasValue && args.Top.HasValue && args.Top.Value > 0)
            {
                pageNumber = (args.Skip.Value / args.Top.Value) + 1;
                pageSize = args.Top.Value;
            }
            var result = await DriverClientService.GetDriversAsync(companyId,pageNumber, pageSize);
            if (result != null && result.Success)
            {
                drivers = result.Data?.Data ?? new List<DriverDto>();
                totalCount = result.Data?.TotalItems ?? 0;
                if (!isDisposed && driversGrid != null)
                {
                    await driversGrid.Reload();
                }
            }
            else
            {
                NotificationService.Notify(new NotificationMessage
                    {
                        Severity = NotificationSeverity.Error,
                        Summary = "Error Loading Drivers",
                        Detail = string.Join("; ", result?.Errors ?? new List<string> { "Unknown error" }),
                        Duration = 4000
                    });
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(new NotificationMessage
                {
                    Severity = NotificationSeverity.Error,
                    Summary = "Exception",
                    Detail = ex.Message,
                    Duration = 4000
                });
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ConfirmArchive(Guid driverId, string driverName)
    {
        var confirmed = await DialogService.Confirm(
            $"Are you sure you want to archive driver '{driverName}'?",
            "Confirm Archive",
            new ConfirmOptions { OkButtonText = "Yes", CancelButtonText = "No" }
        );
        if (confirmed == true)
        {
            var result = await DriverClientService.ArchiveDriverAsync(driverId, companyId);
            if (result != null && result.Success)
            {
                NotificationService.Notify(new NotificationMessage
                    {
                        Severity = NotificationSeverity.Success,
                        Summary = "Driver Archived",
                        Detail = $"Driver '{driverName}' archived successfully.",
                        Duration = 4000
                    });
                await LoadData(new LoadDataArgs { Skip = (pageNumber - 1) * pageSize, Top = pageSize });
            }
            else
            {
                NotificationService.Notify(new NotificationMessage
                    {
                        Severity = NotificationSeverity.Error,
                        Summary = "Error Archiving Driver",
                        Detail = string.Join("; ", result?.Errors ?? new List<string> { "Unknown error" }),
                        Duration = 4000
                    });
            }
        }
    }





    private async Task EditDriver(Guid driverId, string driverName)
    {
        var driver = await DriverClientService.GetDriverByIdAsync(driverId, companyId);
        if (driver == null || !driver.Success)
        {
            NotificationService.Notify(new NotificationMessage
                {
                    Severity = NotificationSeverity.Error,
                    Summary = "Error",
                    Detail = driver?.Errors?.Any() == true ? string.Join("; ", driver.Errors) : "Driver not found.",
                    Duration = 4000
                });
            return;
        }

        var parameters = new Dictionary<string, object>
        {
            { "Driver", driver.Data },
            { "OnSave", new Action<DriverDto>(async (updatedDriver) =>
                {
                    var result = await DriverClientService.UpdateDriverAsync(updatedDriver);
                    if (result.Success)
                    {
                        NotificationService.Notify(new NotificationMessage
                        {
                            Severity = NotificationSeverity.Success,
                            Summary = "Driver Updated",
                            Detail = $"Driver '{updatedDriver.DriverName}' updated successfully.",
                            Duration = 4000
                        });
                        await LoadData(new LoadDataArgs { Skip = (pageNumber - 1) * pageSize, Top = pageSize });
                    }
                    else
                    {
                        NotificationService.Notify(new NotificationMessage
                        {
                            Severity = NotificationSeverity.Error,
                            Summary = "Error Updating Driver",
                            Detail = string.Join("; ", result.Errors),
                            Duration = 4000
                        });
                    }
                })
            }
        };

        // await DialogService.OpenAsync<EditDriverDialog>("Edit Driver", parameters, new DialogOptions { Width = "500px", Height = "auto" });
    }

    public void Dispose()
    {
        isDisposed = true;
    }







    private async Task OpenCreateDialog()
    {
        var result = await DialogService.OpenAsync<CreateDriverDialog>(
            "Create Driver",
            new Dictionary<string, object>
                {
            { "OnDriverCreated", EventCallback.Factory.Create<CreateDriverDto>(this, CreateDriver) }
                },
            new DialogOptions() { Width = "600px", Height = "400px", Resizable = true, Draggable = true });

        if (result == true)
        {
            await LoadData(new LoadDataArgs { Skip = 0, Top = pageSize });
        }
    }

    private Guid _companyId = Guid.Parse("9D176E43-E0FF-4755-B130-625189F3991B");





    private async Task CreateDriver(CreateDriverDto newDriver)
    {
        var result = await DriverClientService.CreateDriverAsync(newDriver);



        if (result != null && result.Success)
        {
            NotificationService.Notify(new NotificationMessage
                {
                    Severity = NotificationSeverity.Success,
                    Summary = "Success",
                    Detail = "Driver created successfully!",
                    Duration = 4000
                });
            // Optionally refresh driver list
            await driversGrid.Reload(); // Triggers LoadDa
        }
        else
        {
            NotificationService.Notify(new NotificationMessage
                {
                    Severity = NotificationSeverity.Error,
                    Summary = "Error",
                
                    Duration = 4000
                });
        }
    }




}